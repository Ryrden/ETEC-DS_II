<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnKmM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="194dp"
        android:backgroundTint="@color/purple_700"
        android:text="Km > Metro"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMKm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:backgroundTint="@color/purple_700"
        android:text="Metro > Km"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/btnKmM"
        app:layout_constraintTop_toBottomOf="@+id/btnKmM" />

    <Button
        android:id="@+id/btnCmM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:backgroundTint="@color/purple_700"
        android:text="Cm > Metro"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/btnMCm"
        app:layout_constraintTop_toBottomOf="@+id/btnMCm" />

    <Button
        android:id="@+id/btnMCm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:backgroundTint="@color/purple_700"
        android:text="Metro > Cm"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/btnMKm"
        app:layout_constraintTop_toBottomOf="@+id/btnMKm" />

</androidx.constraintlayout.widget.ConstraintLayout>